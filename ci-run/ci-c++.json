{	"tasks": {
		"build:main": {
			"enable": true,
			"type": "build:cmake"
		},
		"test:unittest": {
			"enable": true,
			"requires": "build:main",
			"type": "test:googletest"
		},
		"test:analysis:win64": {
			"enable": true,
			"requires": "build:main",
			"type": "test:cppcheck",
			"variant": "c++",
			"settings" : {
				"arguments" : {
					"platform": "win64"
				}
			}
		},
		"test:analysis:unix64": {
			"enable": true,
			"requires": "build:main",
			"type": "test:cppcheck",
			"variant": "c++",
			"settings" : {
				"arguments" : {
					"platform": "unix64"
				}
			}
		},
		"doc:long": {
			"enable": true,
			"type": "doc:doxygen",
			"settings" : {
				"output": "${output.path}/doc/long",
				"doxyfile" : {
					"FILE_PATTERNS": "*.hpp, *.cpp",
					"EXTRACT_ALL": "YES",
					"EXTRACT_PRIVATE": "YES",
					"EXTRACT_PACKAGE": "YES",
					"EXTRACT_STATIC": "YES",
					"EXTRACT_LOCAL_CLASSES": "YES",
					"EXTRACT_LOCAL_METHODS": "YES",
					"EXTRACT_ANON_NSPACES": "YES",
					"HIDE_UNDOC_MEMBERS": "NO",
					"HIDE_UNDOC_CLASSES": "NO",
					"HIDE_FRIEND_COMPOUNDS": "NO",
					"HIDE_IN_BODY_DOCS": "NO",
					"INTERNAL_DOCS": "YES",
					"SHOW_INCLUDE_FILES": "YES",
					"GENERATE_TODOLIST": "YES",
					"GENERATE_TESTLIST": "YES",
					"GENERATE_BUGLIST": "YES",
					"SHOW_USED_FILES": "YES"
				}
			}
		},
		"doc:short": {
			"enable": true,
			"type": "doc:doxygen",
			"settings" : {
				"output": "${output.path}/doc/short",
				"doxyfile" : {
					"FILE_PATTERNS": "*.hpp",
					"EXTRACT_ALL": "NO",
					"EXTRACT_PRIVATE": "NO",
					"EXTRACT_PACKAGE": "NO",
					"EXTRACT_STATIC": "YES",
					"EXTRACT_LOCAL_CLASSES": "NO",
					"EXTRACT_LOCAL_METHODS": "NO",
					"EXTRACT_ANON_NSPACES": "NO",
					"HIDE_UNDOC_MEMBERS": "YES",
					"HIDE_UNDOC_CLASSES": "YES",
					"HIDE_FRIEND_COMPOUNDS": "YES",
					"HIDE_IN_BODY_DOCS": "YES",
					"INTERNAL_DOCS": "NO",
					"SHOW_INCLUDE_FILES": "NO",
					"GENERATE_TODOLIST": "NO",
					"GENERATE_TESTLIST": "NO",
					"GENERATE_BUGLIST": "NO",
					"SHOW_USED_FILES": "NO"
				}
			}
		}
	}
}