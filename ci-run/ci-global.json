{	"output": {
		"repository": {
			"url": "${source.repository}",
			"branch": "${source.branch}-ci"
		},
		"template": {
			"file": "output-template.xml",
			"paths": {
				"title": "html.head.title",
				"content": "html.body"
			}
		}
	},
	"defaults": {
		"build:cmake": {
			"defaults" : {
				"binary:cmake": "/usr/bin/cmake",
				"binary:make": "/usr/bin/make",
				"source": "${source.path}",
				"output": "${output.path}/build"
			}
		},
		"test:googletest": {
			"defaults": {
				"binary": "${output.path}/build/googletest",
				"output": "${output.path}/test/${source.commit.timestamp}-${source.commit.sid}/googletest.xml"
			}
		},
		"test:cppcheck": {
			"defaults": {
				"binary": "/usr/bin/cppcheck",
				"source": "${source.path}",
				"output": "${output.path}/test/${source.commit.timestamp}-${source.commit.sid}/cppcheck.xml",
				"arguments" : {
					"enable": "all",
					"suppress": "missingIncludeSystem"
				}
			},
			"c++": {
				"arguments" : {
					"standard": "c++11"
				}
			}
		},
		"doc:doxygen": {
			"defaults": {
				"binary": "/usr/bin/doxygen",
				"source": "${source.path}",
				"output": "${output.path}/doc",
				"doxyfile" : {
					"RECURSIVE": "YES",
					"CASE_SENSE_NAMES": "NO"
				}
			}
		}
	}
}