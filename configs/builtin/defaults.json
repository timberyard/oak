{	"checkout:git": {
		"enabled": "yes",
		"binary": "git"
	},
	"build:cmake": {
		"enabled": "yes",
		"cmake:binary": "cmake",
		"make:binary": "make",
		"make:type": "gnu",
		"local" : {
			"c:binary": "cc",
			"c++:binary": "c++"
		},
		"target" : {
			"c:binary": "cc",
			"c++:binary": "c++"
		},
		"source": "${input}",
		"build:output": "${output}/build",
		"install": {
			"enabled": "yes",
			"base": "${output}/build",
			"output": "${output}/install"
		},
		"verbose": "false"
	},
	"test:googletest": {
		"enabled": "yes",
		"binary": "${output}/build/test",
		"output": "${output}/test/googletest.xml",
		"filter": "*"
	},
	"analysis:cppcheck": {
		"enabled": "yes",
		"binary": "cppcheck",
		"source": "${input}/src",
		"output": "${output}/analysis/cppcheck.xml"
	},
	"doc:doxygen": {
		"enabled": "yes",
		"binary": "doxygen",
		"source": "${input}/src",
		"output": "${output}/doc",
		"install": {
			"format": "html",
			"directory": "${output}/install/share/doc/${project}"
		},
		"doxyfile" : {
			"FILE_PATTERNS": "*.h*",
			"RECURSIVE": "YES",
			"CASE_SENSE_NAMES": "NO",
			"EXTRACT_ALL": "NO",
			"EXTRACT_PRIVATE": "NO",
			"EXTRACT_PACKAGE": "NO",
			"EXTRACT_STATIC": "YES",
			"EXTRACT_LOCAL_CLASSES": "NO",
			"EXTRACT_LOCAL_METHODS": "NO",
			"EXTRACT_ANON_NSPACES": "NO",
			"HIDE_UNDOC_MEMBERS": "YES",
			"HIDE_UNDOC_CLASSES": "YES",
			"HIDE_FRIEND_COMPOUNDS": "YES",
			"HIDE_IN_BODY_DOCS": "YES",
			"INTERNAL_DOCS": "NO",
			"SHOW_INCLUDE_FILES": "NO",
			"GENERATE_TODOLIST": "NO",
			"GENERATE_TESTLIST": "NO",
			"GENERATE_BUGLIST": "NO",
			"SHOW_USED_FILES": "NO"
		}
	},
	"publish:rsync": {
		"enabled": "yes",
		"rsync:binary": "rsync",
		"ssh:binary": "ssh",
		"source": "${output}/install",
		"destination": {
			"port": "22",
			"directory": "${project}/${branch}/${commit.timestamp.compact}_${commit.short-id}/${machine}"
		}
	}
}