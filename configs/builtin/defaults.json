{	"build:cmake": {
		"cmake:binary": "cmake",
		"make:binary": "make",
		"local" : {
			"c:binary": "cc",
			"c++:binary": "c++"
		},
		"target" : {
			"c:binary": "cc",
			"c++:binary": "c++"
		},
		"source": "${input}",
		"output": "${output}/build"
	},
	"test:googletest": {
		"binary": "${output}/build/tests",
		"output": "${output}/tests/googletest.xml"
	},
	"test:cppcheck": {
		"binary": "cppcheck",
		"source": "${input}/src",
		"output": "${output}/tests/cppcheck.xml"
	},
	"doc:doxygen": {
		"binary": "doxygen",
		"source": "${input}/src",
		"output": "${output}/docs",
		"doxyfile" : {
			"FILE_PATTERNS": "*.h*",
			"RECURSIVE": "YES",
			"CASE_SENSE_NAMES": "NO",
			"EXTRACT_ALL": "NO",
			"EXTRACT_PRIVATE": "NO",
			"EXTRACT_PACKAGE": "NO",
			"EXTRACT_STATIC": "YES",
			"EXTRACT_LOCAL_CLASSES": "NO",
			"EXTRACT_LOCAL_METHODS": "NO",
			"EXTRACT_ANON_NSPACES": "NO",
			"HIDE_UNDOC_MEMBERS": "YES",
			"HIDE_UNDOC_CLASSES": "YES",
			"HIDE_FRIEND_COMPOUNDS": "YES",
			"HIDE_IN_BODY_DOCS": "YES",
			"INTERNAL_DOCS": "NO",
			"SHOW_INCLUDE_FILES": "NO",
			"GENERATE_TODOLIST": "NO",
			"GENERATE_TESTLIST": "NO",
			"GENERATE_BUGLIST": "NO",
			"SHOW_USED_FILES": "NO"
		}
	},
	"publish:rsync": {
		"binary": "rsync",
		"source": "${output}",
		"destination": {
			"port": "22",
			"directory": "${repository}/${branch}/${commit.timestamp}_${commit.short-id}"
		}
	}
}