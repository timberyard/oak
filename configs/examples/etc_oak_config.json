{	"defaults": {
		"build:cmake": {
			"cmake:binary": "/usr/bin/cmake",
			"make:binary": "/usr/bin/make",
			"local" : {
				"c:binary": "/usr/bin/gcc",
				"c++:binary": "/usr/bin/g++",
				"architecture": "x86",
				"bitness": "64",
				"os": "linux"
			},
			"target" : {
				"c:binary": "/usr/bin/gcc",
				"c++:binary": "/usr/bin/g++",
				"architecture": "x86",
				"bitness": "64",
				"os": "linux"
			},
			"verbose": "true"
		},
		"analysis:cppcheck": {
			"binary": "/usr/bin/cppcheck"
		},
		"doc:doxygen": {
			"binary": "/usr/bin/doxygen"
		}
	},
	"publish": {
		"repo": {
			"type": "publish:rsync",
			"destination": {
				"user": "builds",
				"host": "build-repo",
				"base": "/home/builds/integration"
			}
		}
	}
}